@model IEnumerable<PartyInvites.Models.GuestResponse>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>GuestResponses</title>
</head>
<body>
    <div class="panel-body">
        <h2>Here is the list of people attendeing the party</h2>
        <table class="table  table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                </tr>
            </thead>

            @foreach (GuestResponse guestResponse in Model)
            {
                <tr>
                    <td>@guestResponse.Name</td>
                    <td>@guestResponse.Phone</td>
                    <td>@guestResponse.Email</td>
                </tr>

            }
        </table>
    </div>
</body>
</html>
