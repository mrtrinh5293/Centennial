<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPage">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerPage_username"
        android:maxLength="20"
        android:layout_marginTop="100dp"
        android:textColor="#880A0A"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center|left"
        android:padding="20dp"
        android:hint="UserName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerPage_email"
        android:layout_below="@id/registerPage_username"
        android:maxLength="50"
        android:layout_marginTop="20dp"
        android:textColor="#880A0A"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center|left"
        android:padding="20dp"
        android:hint="Email"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerPage_password"
        android:layout_below="@id/registerPage_email"
        android:maxLength="20"
        android:layout_marginTop="20dp"
        android:textColor="#880A0A"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center|left"
        android:padding="20dp"
        android:inputType="textPassword"
        android:hint="Password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerPage_confirmPassword"
        android:layout_below="@id/registerPage_password"
        android:maxLength="20"
        android:layout_marginTop="20dp"
        android:textColor="#880A0A"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center|left"
        android:padding="20dp"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        />

    <Button
        android:layout_width="168dp"
        android:layout_height="60dp"
        android:id="@+id/loginPage_registerBtn"
        android:layout_below="@id/registerPage_confirmPassword"
        android:layout_centerInParent="true"
        android:text="Submit"
        android:layout_marginTop="8dp"
        />
</RelativeLayout>